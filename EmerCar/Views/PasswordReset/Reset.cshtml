@model EmerCar.Models.ResetPassword
@{
    ViewBag.Title = "Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset</h2>
<br />
<br />
@using (Html.BeginForm("Confirm", "PasswordReset", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.mail, "Please enter your email again!!")
        @Html.TextBoxFor(m => m.mail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.oldpass, "Old Password")
        @Html.TextBoxFor(m => m.oldpass, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.newpass, "NewPassword")
        @Html.TextBoxFor(m => m.newpass, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">SignUp</button>
}

